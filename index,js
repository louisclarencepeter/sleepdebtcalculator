function getSleepHours(day) {
  if (day === "monday") {
    return 7;
  } else if (day === "tuesday") {
    return 6;
  } else if (day === "wednesday") {
    return 8;
  } else if (day === "thursday") {
    return 8;
  } else if (day === "friday") {
    return 5;
  } else if (day === "saturday") {
    return 6;
  } else if (day === "sunday") {
    return 7;
  }
}